<Window x:Class="EncodeDecode.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EncodeDecode"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="1000">
    <Grid>
        <Button x:Name="btnSetting" Content="Encode" Margin="10,222,0,0" HorizontalAlignment="Left" Width="80" Height="25" VerticalAlignment="Top" Click="BtnSetting_Click"/>
        <TextBox x:Name="txtInput" HorizontalAlignment="Left" Height="207" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="972" TextChanged="TxtInput_TextChanged"/>
        <TextBox x:Name="txtOutput" HorizontalAlignment="Left" Height="207" Margin="10,252,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="972"/>
        <TextBox x:Name="txtKey" HorizontalAlignment="Left" Height="25" Margin="180,222,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="802" FontSize="16" TextChanged="TxtKey_TextChanged" Text="0123456789"/>
        <Button x:Name="btnKey" Content="Gen Key" Margin="95,222,0,0" HorizontalAlignment="Left" Width="80" Height="25" VerticalAlignment="Top" Click="BtnKey_Click"/>
    </Grid>
</Window>
